<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:text="마이페이지"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/my_page_my_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="내 가입정보"
            android:fontFamily="@font/roboto_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/my_page_my_info_tv"
            app:layout_constraintStart_toStartOf="@id/my_page_my_info_tv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="이메일 가입"
            android:textSize="10dp"
            android:fontFamily="@font/roboto_regular"/>


        <View
            android:id="@+id/bar1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5E5A5A5A"
            app:layout_constraintTop_toBottomOf="@id/my_page_my_info_tv"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="65dp"
            />

        <TextView
            android:id="@+id/my_page_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bar1"
            android:text="example@naver.com"
            app:layout_constraintStart_toStartOf="@id/bar1"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bar1"
            app:layout_constraintStart_toStartOf="@id/bar1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="계정설정"
            android:textSize="10dp"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/my_page_set_account_info_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/bar1"
            android:text="계정정보 설정"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/my_page_set_personal_info_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_set_account_info_btn"
            android:text="키/몸무게 설정"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

        <View
            android:id="@+id/bar2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5E5A5A5A"
            app:layout_constraintTop_toBottomOf="@id/my_page_set_personal_info_btn"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="65dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bar2"
            app:layout_constraintStart_toStartOf="@id/bar2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="계정설정"
            android:textSize="10dp"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/my_page_version_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/bar2"
            android:text="버전 정보"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/my_page_version_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/my_page_version_tv"
            app:layout_constraintTop_toTopOf="@id/my_page_version_tv"
            app:layout_constraintBottom_toBottomOf="@id/my_page_version_tv"
            android:text="현재 1.0.0 / 최신 1.0.0"
            android:textSize="11dp"
            android:fontFamily="@font/roboto_regular"
            />

        <TextView
            android:id="@+id/my_page_ask_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_version_tv"
            android:text="문의하기"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/my_page_service_regulation_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_ask_btn"
            android:text="서비스 이용약관"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/my_page_personal_info_regulation_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_service_regulation_btn"
            android:text="개인정보 처리방침"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>