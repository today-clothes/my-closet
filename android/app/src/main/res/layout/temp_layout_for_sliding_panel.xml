<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/detail_round_background">

    <TextView
        android:id="@+id/detail_second_edit_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        />
    
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:track="@drawable/switch_selector"
        android:thumbTint="@color/white"
        android:scaleX="2"
        android:scaleY="2"
        />
        
    
    <TextView
        android:layout_width="70dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/detail_round_gray_bar"/>

    <ImageView
        android:id="@+id/detail_second_like_btn_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/heart_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/detail_second_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:text="겨울 월정리에서"
        android:textSize="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/detail_second_info_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_second_title_tv"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="3dp"
        android:text="22.03.03/동동 173cm 68kg"
        android:fontFamily="@font/roboto_regular"
        />

    <GridLayout
        android:id="@+id/detail_second_tag_list_gl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/detail_second_info_user_tv"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/detail_second_info_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_second_tag_list_gl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="50dp"
        android:text="상세정보입니다 상세정보정보정보\n\n상세정보정보정보"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/detail_second_info_detail_tv"
        />
    
    <TextView
        android:id="@+id/detail_second_apply_tv"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="적용"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_second_info_detail_tv"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/secondary"
        android:textColor="@color/primary"
        />
    
    <TextView
        android:id="@+id/detail_second_cancel_tv"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="취소"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_second_info_detail_tv"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/secondary"
        android:textColor="#AE654CBB"
        />
    



</androidx.constraintlayout.widget.ConstraintLayout>