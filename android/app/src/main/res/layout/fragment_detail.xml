<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_main_frm_spl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    app:umanoShadowHeight="0dp"
    app:umanoDragView="@id/detail_second_cl"
    app:umanoOverlay="true"
    app:umanoPanelHeight="60dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/detail_main_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/temp_selfee"
            />

        <ImageView
            android:id="@+id/detail_main_back_btn_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_gray_to_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_second_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_round_background"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/detail_round_gray_bar"/>

        <ImageView
            android:id="@+id/detail_second_like_btn_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/detail_second_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:text="겨울 월정리에서"
            android:textSize="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detail_second_info_user_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_second_title_tv"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="3dp"
            android:text="22.03.03/동동 173cm 68kg"
            android:fontFamily="@font/roboto_regular"
            />

        <GridLayout
            android:id="@+id/detail_second_tag_list_gl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/detail_second_info_user_tv"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detail_second_info_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_second_tag_list_gl"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="50dp"
            android:text="상세정보입니다 상세정보정보정보\n\n상세정보정보정보"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/detail_second_info_detail_tv"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>