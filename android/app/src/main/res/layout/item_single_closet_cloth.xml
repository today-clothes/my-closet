<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingBottom="20dp"
    android:paddingTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <ImageView
        android:id="@+id/single_closet_cloth_image_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/single_closet_cloth_name_tv"
        android:src="@drawable/temp_selfee"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <ImageView
        android:id="@+id/single_closet_lock_icon_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lock_purple_locked"
        app:layout_constraintTop_toTopOf="@id/single_closet_cloth_image_iv"
        app:layout_constraintStart_toStartOf="@id/single_closet_cloth_image_iv"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="-5dp"
        android:visibility="gone"/>

    
    <ImageView
        android:id="@+id/single_closet_cloth_selected_btn_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/single_closet_cloth_image_iv"
        app:layout_constraintEnd_toEndOf="@id/single_closet_cloth_image_iv"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/checkbox_purple"
        android:visibility="gone"
        />
        

    <TextView
        android:id="@+id/single_closet_cloth_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_bold"
        android:text="옷 코디"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/single_closet_cloth_closet_text_body_tv"
        app:layout_constraintStart_toStartOf="@id/single_closet_cloth_image_iv"
        app:layout_constraintTop_toBottomOf="@id/single_closet_cloth_image_iv" />
    
    <TextView
        android:id="@+id/single_closet_cloth_closet_text_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/single_closet_cloth_image_iv"
        app:layout_constraintTop_toBottomOf="@id/single_closet_cloth_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="옷 코디임 설명블라블라"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:textSize="13dp"
        />
    
    <TextView
        android:id="@+id/single_closet_cloth_edit_background_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38654CBB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
        
        
        

</androidx.constraintlayout.widget.ConstraintLayout>