<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_sign_up_main_background_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <ImageView
        android:id="@+id/login_sign_up_logo_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/app_logo"
        />
    
    <TextView
        android:id="@+id/login_sign_up_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 시작하기"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="26dp"
        android:textColor="@color/black"
        />
    
    
    <EditText
        android:id="@+id/login_sign_up_edit_text_email_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_sign_up_edit_text_background"
        android:hint="Email"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_text_tv" />
    
    <EditText
        android:id="@+id/login_sign_up_edit_text_password_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_edit_text_email_et"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_sign_up_edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    
    <EditText
        android:id="@+id/login_sign_up_edit_text_password_confirm_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_edit_text_password_et"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_sign_up_edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:hint="Password Confirm"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    

    
    <CheckBox
        android:id="@+id/login_sign_up_agree_all_cb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_edit_text_password_confirm_et"
        app:layout_constraintStart_toStartOf="@id/login_sign_up_edit_text_password_confirm_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="약관 전체 동의"
        android:textStyle="bold"/>
    
    <CheckBox
        android:id="@+id/login_sign_up_agree_1_cb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_agree_all_cb"
        app:layout_constraintStart_toStartOf="@id/login_sign_up_edit_text_password_confirm_et"
        android:layout_marginStart="40dp"
        android:text="이용약관 동의"/>
    
    <CheckBox
        android:id="@+id/login_sign_up_agree_2_cb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_agree_1_cb"
        app:layout_constraintStart_toStartOf="@id/login_sign_up_edit_text_password_confirm_et"
        android:layout_marginStart="40dp"
        android:text="개인정보 취급방침 동의"/>
    
    <CheckBox
        android:id="@+id/login_sign_up_agree_3_cb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_agree_2_cb"
        app:layout_constraintStart_toStartOf="@id/login_sign_up_edit_text_password_confirm_et"
        android:layout_marginStart="40dp"
        android:text="마케팅 정보 수신 동의"/>
    
    
    <TextView
        android:id="@+id/login_sign_up_sign_up_btn_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/basic_theme_button_inactive"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Next"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
    <ProgressBar
        android:id="@+id/loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

</androidx.constraintlayout.widget.ConstraintLayout>